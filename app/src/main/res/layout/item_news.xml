<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    
    <ImageView 
        android:id="@+id/iv_newspic"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/listview_img"
        android:layout_alignParentRight="true"
        android:src="@mipmap/european"/>
    
    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新闻标题"
        android:textSize="18sp"
        android:layout_toLeftOf="@+id/iv_newspic"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/iv_newspic"
        android:singleLine="true"
        android:ellipsize="end"/>
    
    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新闻简介"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_subject"
        android:layout_alignLeft="@+id/tv_subject"
        android:layout_toLeftOf="@+id/iv_newspic"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="#888"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tv_summary"
        android:layout_alignLeft="@+id/tv_subject"
        android:layout_alignBottom="@+id/iv_newspic"
        android:layout_toLeftOf="@+id/iv_newspic">

        <TextView
            android:id="@+id/readCount"
            android:text="10"
            android:drawableLeft="@mipmap/icon_comment_r_v2"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/shareCount"
            android:text="10"
            android:drawableLeft="@mipmap/icon_collect2_y"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/praiseCount"
            android:text="10"
            android:drawableLeft="@mipmap/ic_thumbup_red2"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
